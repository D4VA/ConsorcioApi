datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id                  Int         @id @default(autoincrement())
  customerName        String      @map("customername")
  customerEmail       String      @map("customeremail")
  totalBeforeDiscount Decimal     @db.Decimal(10, 2) @map("totalbeforediscount")
  totalDiscount       Decimal     @db.Decimal(10, 2) @map("totaldiscount")
  totalAfterDiscount  Decimal     @db.Decimal(10, 2) @map("totalafterdiscount")
  status              String      @default("PENDING")
  createdAt           DateTime    @map("createdat") @default(now())
  couponId            Int?        @map("couponid")
  coupon              Coupon?     @relation(fields: [couponId], references: [id])
  items               OrderItem[]
}

model OrderItem {
  id          Int     @id @default(autoincrement())
  orderId     Int     @map("orderid")
  order       Order   @relation(fields: [orderId], references: [id])
  productId   Int     @map("productid")
  productName String  @map("productname")
  price       Decimal @db.Decimal(10, 2) @map("price")
  quantity    Int     @map("quantity")
  image       String? @map("image")
}

model Coupon {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  description String?
  type        String
  discount    Decimal  @db.Decimal(5, 2)
  createdAt   DateTime @map("createdat") @default(now())  // map al nombre real
  updatedAt   DateTime @map("updatedat") @updatedAt
  orders      Order[]
}
